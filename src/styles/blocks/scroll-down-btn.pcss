.scroll-down-btn {
  display: inline-block;
  display: flex;
  align-items: center;
  font-size: 18px;
  color: $text-color;
  font-weight: 600;
  margin-bottom: 20px;
  text-align: right;
  background: transparent;

  &::after {
    content: "";
    display: block;
    background: svg-load('scroll.svg', fill=$text-color, width=100%, height=100%) center center no-repeat;
    width: 13px;
    height: 13px;
    margin-left: 15px;
  }
}