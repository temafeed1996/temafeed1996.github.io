.slider__header {
    margin-bottom: 95px;
    display: flex;
    justify-content: space-between;
    padding-right: 37.5%;
}

.slider__content {
    display: flex;
    padding-right: 6%;
}

.slider__item {
    width: 50%;
    margin-right: 20px;

    &:last-child {
        margin-right: 0;
    }
}

.slider__buttons {
  display: flex;
}

.slider__btn {
    margin-right: 28px;

    &:last-child {
        margin-right: 0;
    }
}