.round-btn {
  width: 50px;
  height: 50px;
  border: 1px solid currentColor;
  position: relative;
  border-radius: 50%;
  background-color: transparent;
  margin-right: 30px;

  &:last-child {
    margin-right: 0;
  }

  &:before {
    content: "";
    width: 22px;
    height: 36px;
    display: block;
    background: svg-load('arrow-down.svg', fill=$text-color) center center / contain no-repeat;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  &--pointer--right {
    &:before {
      transform: translate(-50%, -50%) rotate(-180deg);
    }
  }
}